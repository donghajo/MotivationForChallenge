<% if(session && challenge.length!=0){ %>
<div class="container my-4">

  <hr class="mt-5">

  <p style="font-size: 30px;", style="font-family: SB OTF M"><%=session%>'s Challenge</p>
  

  <hr class="mb-5"/>

  <!--Carousel Wrapper-->
  <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

    <!--Controls-->
   
    
