    <div class="carousel-inner" role="listbox">
      <% for(var i = 0; i < challenge.length; i++) {%>
        <div class="carousel-item active">

          <div class="row">
            <div class="col-md-4">
              <div class="card mb-2">
                <img class="card-img-top" src="<%=challenge[i].challenge_image%>">
